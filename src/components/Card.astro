---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<div class="bg-gray-100 shadow-lg p-5 border-t-4 border-gray-400">
  <header class="mb-5">
    <h2 class="font-semibold">
      {title}
    </h2>
  </header>

  <div>
    <slot />
  </div>

  <footer class="mt-5">
    <slot name="footer" />
  </footer>
</div>
