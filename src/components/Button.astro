---
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'a'> {
  href: string
}

const { href, ...attrs } = Astro.props
---

<a
  href={href}
  class="inline-block px-3 py-2 border-2 border-gray-800 hover:bg-gray-800 hover:text-white focus:bg-gray-800 focus:text-white rounded-lg transition-colors"
  {...attrs}
>
  <slot />
</a>
